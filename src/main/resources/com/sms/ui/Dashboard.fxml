<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sms.ui.controllers.DashboardController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f4f4f4;">

    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Student Management System Plus"
                   style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;"/>
            <Label text="Department Records Portal"
                   style="-fx-text-fill: #bdc3c7; -fx-font-size: 13;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="30" alignment="CENTER" style="-fx-padding: 40;">

            <HBox spacing="20" alignment="CENTER">
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-min-width: 160; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6;" alignment="CENTER">
                    <Label text="Total Students" style="-fx-font-size: 13; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="totalLabel" text="0" style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-min-width: 160; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6;" alignment="CENTER">
                    <Label text="Active" style="-fx-font-size: 13; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="activeLabel" text="0" style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-min-width: 160; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6;" alignment="CENTER">
                    <Label text="Inactive" style="-fx-font-size: 13; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="inactiveLabel" text="0" style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-min-width: 160; -fx-border-color: #ddd; -fx-border-radius: 6; -fx-background-radius: 6;" alignment="CENTER">
                    <Label text="Average GPA" style="-fx-font-size: 13; -fx-text-fill: #7f8c8d;"/>
                    <Label fx:id="avgGpaLabel" text="0.00" style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
                </VBox>
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnStudents" text="Students" onAction="#openStudents"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 24; -fx-cursor: hand;"/>
                <Button fx:id="btnReports" text="Reports" onAction="#openReports"
                        style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 24; -fx-cursor: hand;"/>
                <Button fx:id="btnImportExport" text="Import / Export" onAction="#openImportExport"
                        style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 24; -fx-cursor: hand;"/>
                <Button fx:id="btnSettings" text="Settings" onAction="#openSettings"
                        style="-fx-background-color: #d35400; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12 24; -fx-cursor: hand;"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
